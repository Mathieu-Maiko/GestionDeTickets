{% extends 'base.html.twig' %}

{% block title %}Hello ListeTicketsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Statut</th>
            <th>Responsable</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.description }}</td>
                <td>{{ ticket.categorie.name }}</td>
                <td>{{ ticket.statut.name }}</td>
                <td>{{ ticket.responsable ? ticket.responsable.email : 'Non assigné' }}</td>
                <td>
                    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
